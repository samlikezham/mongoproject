<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" type="text/css" href="/main.css">
	<title></title>
</head>
<body>
	<h1>
    <% if (currentUser) { %>
        Welcome <%=currentUser.username%>!
    <% } else { %>
        Welcome!
    <% } %>
	</h1>

	<% if (currentUser) { %>
    <nav>
        <form action="/sessions?_method=DELETE" method="POST">
            <input type="submit" value="Logout"/>
        </form>
    </nav>
	<% } %>

	<div class="container">
    <h1>Catalog</h1>
    <div>
      <% for (let i = 0; i < items.length; i++) { %>
      <div>
        <a href="/catalog/<%=items[i].id%>"><img src="<%=items[i].img %>"></a><br/>
        <strong><%= items[i].name %><br/></strong>
        <strong>Price: $<em><%= items[i].price %></em><br/><br/></strong>
      </div>
      <% } %>
      </div>
  </div>

</body>
</html>