<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<% include ../partials/head.ejs %>
	<title></title>
</head>
<body>

	<% include ../partials/nav.ejs %>
  <h1>
    <% if (currentUser) { %>
        Welcome <%=currentUser.username%>!
    <% }  %>   
  </h1>

  <h1>
    <% if (currentAdmin) { %>
        Welcome <%=currentAdmin.username%>!
    <% } %>  
  </h1>

	<div class="container">
    <h1>Catalog</h1>
    <div>
      <% for (let i = 0; i < items.length; i++) { %>
      <div>
        <a href="/catalog/<%=items[i].id%>"><img src="<%=items[i].img %>"></a><br/>
        <strong><%= items[i].name %><br/></strong>
        <strong>Price: $<em><%= items[i].price %></em><br/><br/></strong>
      </div>
      <% } %>
      </div>
  </div>

</body>
</html>